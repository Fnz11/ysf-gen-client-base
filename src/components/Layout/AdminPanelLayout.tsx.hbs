"use client";
import React from "react";
import Sidebar from "./Sidebar/Sidebar";
import { cn } from "@/lib/utils";
import Navbar from "./Navbar/Navbar";
import { Footer } from "./Footer/Footer"; 
import { useSidebarStore } from "@/stores/SidebarStore";
import { shallow } from "zustand/shallow";
import NextTopLoader from "nextjs-toploader";

const AdminPanelLayout = ({ children }: { children: React.ReactNode }) => {
  const [isOpenSidebar, toggleSidebar] = useSidebarStore(
    (state) => [state.isOpenSidebar, state.toggleSidebar],
    shallow
  );
  return (
    <>
      <Sidebar />
      <NextTopLoader showSpinner={false} height={4} crawlSpeed={10} />
      <div
        className={cn(
          "min-h-[calc(100vh_-_56px)] overflow-x-hidden transition-[margin-left] ease-in-out duration-300",
          isOpenSidebar === false ? "lg:ml-[93px]" : "lg:ml-72"
        )}
      >
        <Navbar /> 
        <div className="size-full z-[1] relative">{children}</div>
      </div>
      <footer
        className={cn(
          "transition-[margin-left] ease-in-out duration-300 ",
          isOpenSidebar === false ? "lg:ml-[70px]" : "lg:ml-72"
        )}
      >
        <Footer />
      </footer>
    </>
  );
};

export default AdminPanelLayout;
