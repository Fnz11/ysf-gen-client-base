"use client";
import Link from "next/link";
import { usePathname } from "next/navigation";
import React from "react";

const LINKS_SETTINGS = [
  {
    name: "General",
    href: "/settings",
  },
  {
    name: "Profile",
    href: "/settings/profile",
  },
  {
    name: "Payments",
    href: "/settings/payments",
  },
];

const SettingsBar = () => {
  const pathname = usePathname();
  return (
    <aside className="hidden border-r bg-card relative md:block h-full">
      <div className="flex h-full max-h-screen sticky top-0 flex-col gap-2">
        <div className="flex h-14 items-center border-b px-4 lg:h-[60px] lg:px-6 font-semibold">
          {/* Header */}
          <span className=""> Settings</span>
        </div>
        {/* Links */}
        <div className="grid gap-2 items-start px-2 text-sm font-medium lg:px-4">
          {LINKS_SETTINGS.map((item) => {
            let isActive = false;
            if (item.name == "General") {
              const splitted = pathname?.split("/");
              if (splitted[1] == "settings" && splitted.length == 2) {
                isActive = true;
              }
            } else {
              isActive = pathname?.includes(item.href);
            }
            return (
              <Link
                key={item.name}
                href={item.href}
                className={`flex items-center gap-3 rounded-lg px-3 py-3 transition-all hover:bg-accent/10 ${
                  isActive ? "text-muted-foreground bg-accent/10" : "text-muted-foreground"
                } `}
              >
                {item.name}
              </Link>
            );
          })}
        </div>
      </div>
    </aside>
  );
};

export default SettingsBar;
