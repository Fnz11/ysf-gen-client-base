    <FormField
      control={form.control}
      name={name}
      render={({ field }) => (
        <FormItem className="flex w-full items-center justify-center border border-foreground/20 rounded-lg overflow-hidden bg-background/35 p-0">
          <FormLabel className="w-[25%] flex items-center justify-start h-full text-md border-r border-foreground/20">
            {label}
