import MutateClient from "@/components/Dashboard/User/Mutate/MutateClient";
import PageContainer from "@/components/Layout/PageContainer";
import { Breadcrumbs } from "@/components/ui/breadcrumbs";
import { getUserById } from "@/utils/users-api";
import { cookies } from "next/headers";
import React from "react";

const breadcrumbItems = [
  { title: "Dashboard", link: "/" },
  { title: "Users", link: "/users" },
  { title: "Mutate", link: "/user/mutate" },
];

const Mutate = async ({ params }: { params: { id: string } }) => {
  let data;
  const token = cookies().get("session")?.value;
  if (params.id === "create") {
    data = null;
  } else {
    data = (await getUserById(params.id, token)).data.data;
  }
  return (
    <PageContainer className="space-y-2 w-full">
      {/* Breadcrumbs */}
      <Breadcrumbs items={breadcrumbItems} />
      {/* Content */}
      <div className="size-full flex flex-col items-start justify-between gap-5">
        <MutateClient data={data} />
      </div>{" "}
    </PageContainer>
  );
};

export default Mutate;
